---
import './src/styles/global.css'
---

<header class="fixed w-full py-2 backdrop-blur-sm z-20 top-0 shadow-md bg-neutral-100">
  <div class="max-w-7xl w-full mx-auto flex flex-wrap items-center justify-between px-4 md:px-8">
    <a href="/" class="py-2">
      <img class="w-32 md:w-40 rounded-2xl" src="/Header.jpeg" alt="Logo">
    </a>

    <nav class="w-full md:w-auto flex flex-col md:flex-row items-center gap-4 md:gap-10 pt-4 md:pt-0 mx-auto">
      <ul class="flex flex-col md:flex-row gap-4 md:gap-10 text-black font-semibold items-center">
        <li><a class="menu-link hover:text-orange-500 transition-colors duration-200" href="/iniciarPlantilla">Plantillas</a></li>
        <li><a class="menu-link hover:text-orange-500 transition-colors duration-200" href="/marketing">Marketing</a></li>
        <li><a class="menu-link hover:text-orange-500 transition-colors duration-200" href="/servicio">Servicios</a></li>
      </ul>

      <a href="/iniciar" class="bg-orange-500 hover:shadow-lg hover:bg-sky-950 transition-colors duration-300 text-base rounded-full py-2 px-4 font-semibold text-white text-center mt-2 md:mt-0">
        Iniciar Sesion
      </a>
    </nav>
  </div>
</header>

<script>
  const menuLinks = document.querySelectorAll('.menu-link');
  const currentPath = window.location.pathname;
  menuLinks.forEach(link => {
    if (link.getAttribute('href') === currentPath) {
      link.classList.add('text-red-500');
    }
  });
</script>
