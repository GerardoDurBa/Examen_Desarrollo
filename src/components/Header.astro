---
import './src/styles/global.css'
---
<header class="fixed w-screen py-2 backdrop-blur-sm z-20 top-0 px-8 lg:px-0 shadow-md" style="background-color: rgba(239,238,236,255);">
<div class="grid grid-cols-3 max-w-7xl mx-auto items-center justify-between">
    <a href="/" class="col-span-1">
        <img class="w-40 rounded-2xl" src="../../public/Header.jpeg" width="" alt="">
    </a>
    <nav class="col-span-2 justify-self-center py-4 flex">
        <ul class="flex gap-10 text-black font-semibold">
            <a class="menu-link hover:text-orange-500 duration-200" href="/iniciarPlantilla"><li>Plantillas</li></a>
            <a class="menu-link hover:text-orange-500 duration-200" href="/marketing"><li>Marketing</li></a>
            <a class="menu-link hover:text-orange-500 duration-200 pr-56" href="/servicio"><li>Servicios</li></a>
        </ul>
        <span class="pr-36"><a href="/iniciar" class="bg-orange-500 hover:shadow-lg hover:bg-sky-950 transition-colors duration-500 text-base rounded-full pt-2 pb-2 pl-2 pr-2 font-semibold text-white text-center">Iniciar Sesion</a></span>
    </nav>
</div>
</header>
<script>
    const menuLinks = document.querySelectorAll('.menu-link');
    const currentPath = window.location.pathname;
    menuLinks.forEach(link => {
      if (link.getAttribute('href') === currentPath) {
        link.classList.add('text-red-500');
      }
    });
</script>